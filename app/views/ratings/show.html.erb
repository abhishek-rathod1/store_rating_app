<% if notice.present? %>
  <div class="alert alert-success text-center" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="card shadow-lg p-4">
  <div class="card-body">
    <%= render @rating %>

    <div class="mt-4">
      <%= link_to "Edit this Rating", edit_rating_path(@rating), class: "btn btn-warning me-2" %>
      <%= link_to "Back to Ratings", ratings_path, class: "btn btn-secondary me-2" %>

      <%= button_to "Delete Rating", @rating, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this rating?" } %>
    </div>
  </div>
</div>
