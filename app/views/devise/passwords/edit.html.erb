<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white text-center">
          <h3>Change Your Password</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password, "New Password", class: "font-weight-bold" %>
              <% if @minimum_password_length %>
                <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
              <%= f.password_field :password, class: "form-control", autofocus: true, autocomplete: "new-password", placeholder: "Enter new password" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm New Password", class: "font-weight-bold" %>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Confirm new password" %>
            </div>

            <div class="text-center">
              <%= f.submit "Change My Password", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
