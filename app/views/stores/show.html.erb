<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <h3 class="card-title"><%= @store.name %></h3>
  </div>
  <div class="card-body">
    <%= render @store %> <!-- This will display the store details -->

    <div class="mt-3">
      <%= link_to "Edit this store", edit_store_path(@store), class: "btn btn-warning btn-sm" %>
      <%= link_to "Back to stores", stores_path, class: "btn btn-secondary btn-sm" %>

      <%= button_to "Destroy this store", @store, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this store?" } %>
    </div>
  </div>
</div>
