<div class="container mt-5">
  <h1>Admin Dashboard</h1>

  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Users</h5>
          <p class="card-text"><%= @total_users %></p>
          <%= link_to 'View Users', admin_users_path, class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Stores</h5>
          <p class="card-text"><%= @total_stores %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Ratings</h5>
          <p class="card-text"><%= @total_ratings %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to 'Add Store', new_store_path, class: 'btn btn-secondary' %>
    <%= link_to 'Add User', new_user_path, class: 'btn btn-secondary' %>
    <%= link_to 'Add Admin', create_admin_path, class: 'btn btn-secondary' %>
  </div>
</div>
